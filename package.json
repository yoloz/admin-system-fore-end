{
    "name": "sffv",
    "version": "1.0.0",
    "description": "System framework for Vue",
    "scripts": {
        "cz": "czg",
        "web:start": "pnpm run -F @tms/web start",
        "web:build": "pnpm run -F @tms/web build",
        "web:build:dev": "pnpm run -F @tms/web build:dev",
        "web:build:test": "pnpm run -F @tms/web build:test",
        "web:upload:dev": "pnpm run -F @tms/web upload:dev",
        "web:upload:test": "pnpm run -F @tms/web upload:test",
        "update:git": "cd packages && git pull && cd .. && cd shell && git pull",
        "prepare": "husky install",
        "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx, --max-warnings 0 --cache",
        "lint:fix": "pnpm run lint --fix",
        "rm:nm": "pnpm run -F @ued/shell rm:nm"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "element-plus": "^2.2.13",
        "vue": "^3.2.0",
        "vue-router": "^4.0.15",
        "dayjs": "^1.11.1",
        "pinia": "^2.0.13",
        "@element-plus/icons-vue": "^2.0.9"
    },
    "devDependencies": {
        "czg": "^1.3.8",
        "@babel/core": "^7.17.10",
        "@babel/eslint-parser": "^7.17.0",
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@esbuild-kit/cjs-loader": "^2.2.1",
        "@types/node": "^17.0.41",
        "@typescript-eslint/eslint-plugin": "^5.26.0",
        "@typescript-eslint/parser": "^5.26.0",
        "@vitejs/plugin-vue": "^2.3.1",
        "@vueuse/core": "^9.1.0",
        "eslint": "^8.14.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.2.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-vue": "^8.7.1",
        "sass": "^1.49.9",
        "typescript": "^4.7.4",
        "vite": "^2.9.7",
        "vite-plugin-dts": "^0.9.6",
        "vite-plugin-eslint": "^1.6.0",
        "vite-plugin-libcss": "^1.0.5",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-git"
        }
    },
    "lint-staged": {
        "*.{vue,js,ts,jsx,tsx}": "eslint --fix"
    }
}